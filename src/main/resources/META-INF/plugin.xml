<idea-plugin>
    <id>com.devtools.java.IntelliJ-Translator</id>
    <name>.</name>
    <vendor email="." url=".">.</vendor>

    <description><![CDATA[
    dsa.<br>
    <em>...............................................................................................................a</em>
    ]]></description>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="actions.InputReplacing" class="actions.InputReplacing"
                text="Selected Text Translate">
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl BACK_SLASH" second-keystroke="ctrl T"/>
        </action>
        <action id="actions.InputPopup" class="actions.InputPopup" text="Input PopUp ">
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl BACK_SLASH" second-keystroke="ctrl R"/>
        </action>
        <action id="actions.LanguageSelection" class="actions.LanguageSelection" text="Default Languages Selection">
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl BACK_SLASH" second-keystroke="ctrl E"/>
        </action>
        <action id="actions.Popup" class="actions.Popup" text="PopUp translation">
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl BACK_SLASH" second-keystroke="ctrl Q"/>
        </action>
    </actions>
</idea-plugin>